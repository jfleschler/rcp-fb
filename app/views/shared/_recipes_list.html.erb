<%= will_paginate @recipes %>

<% @recipes.each do |recipe| %>
	<div class="span6">
		<div class="row border">
		<div class="span2">
			<%= image_tag recipe.image_url(:preview), :class => "preview_image" %>
		</div>
		
		<div class="span4">
			<div class="row">
				<div class="span4">
					<span class="bold"><%= link_to recipe.name, recipe %></span>
				</div>
			</div>
			<div class="row">
				<div class="span4">
					<% if @user && @user == current_user && @user.recipes.find(recipe.id) %>
						<%= public_private_button recipe %>
					<% else %>
						&nbsp;
					<% end %>
				</div>
			</div>
			<div class="row">
				<div class="span4 bottom">
					<%= image_tag recipe.user.profile.picture, :size => "40x40", :class => "float_left" %>
					<%= link_to recipe.user.name, recipe.user %>
				</div>
			</div>
		</div>
		</div>
	</div>
<% end %>
