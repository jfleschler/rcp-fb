<div class="container">
<% if @user == current_user %>
	<h3 class="user_title"><%= mine_or_theirs @user %> recipes</h3>
	<%= link_to "new recipe", '#', :class => "btn primary new" %>
	<%= render :partial => 'shared/new_recipe_modal', :locals => {:recipe => @recipe}%>
<% else %>
	<h3><%= mine_or_theirs @user %> recipes</h3>
<% end %>
<hr />

<div id="search_box">
  <input type="text" id="recipe_search" placeholder="what are you looking for..." />
</div>

<div class="categories">
	<span class="label all"><%= link_to "all", :controller => "users", :action => "show", :c => "all" %></span>
	<% RECIPE_CATEGORIES.each do |category| %>
		<span class="label <%= category.gsub(' ', '') %>"><%= link_to category, :controller => "users", :action => "show", :c => category %></span>
	<% end %>
</div>

<div id="allrecipes">
	<%= render :partial => 'shared/recipes_list', :locals => { :recipes => @recipes } %>
</div>
</div>

<script>
$("#recipe_search").keyup(function() {
	  $.ajax({
				    type: 'post', 
				    data: 'search=' + $('#recipe_search').val() + "&u=<%= @user.id %>&c=<%= params[:c] %>", 
				    dataType: 'script', 
				    complete: function(request){ },
				    url: '/recipes/search'});
		});
</script>