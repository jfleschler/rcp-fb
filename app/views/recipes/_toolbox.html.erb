<div class="ingredient_toolbox">
	<div>
	<span id="recipe_ingredients"><%= render :partial => 'recipe_ingredients' %></span>
	<h3>ingredients</h3>
	<hr />
	<% Ingredient.all.each do |i| %>
		<%= image_submit_tag i.image, :title => i.name, :class => "ingredient", :id => i.id, :height => "40", :width => "40", :method => 'get' %>
	<% end %>
	</div>
</div>