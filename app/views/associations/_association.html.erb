<span class="ingredient_image">
	<% unless association.ingredient.recipe_id.nil? %>
		<%= link_to image_tag(association.ingredient.image, :title => association.ingredient.name, :class => "ingredient handle", :size => "40x40"), recipe_path(association.ingredient.recipe_id) %>
	<% else %>
		<%= image_tag association.ingredient.image, :title => association.ingredient.name, :class => "ingredient handle", :size => "40x40" %>
	<% end %>
</span>
<span class="ingredient_amount">
	<%= association.amount %>
</span>
