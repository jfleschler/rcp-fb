<div class="modal hide fade" id="update_recipe"> 
  <%= form_for @recipe, :html => {:multipart => true} do |f| %>
    <div class="modal-header"> 
      <a href="#" class="close">&times;</a> 
      <h3 id="step_header">edit recipe</h3>
    </div> 
    <div class="modal-body"> 
      <div id="recipe_image">
        <%= image_tag @recipe.image_url(:thumb), :title => @recipe.name, :class => "ingredient" if @recipe.image? %>
      </div>
      <div class="clearfix">
        <%= label_tag :name, "name" %>
        <div class="input">
        <%= text_field_tag :name, @recipe.name, :class => "xlarge" %>
        </div>
      </div>
      <div class="clearfix">
        <%= label_tag :in_category, "category" %>
        <div class="input">
        <%= select_tag :in_category, options_for_select( RECIPE_CATEGORIES, @recipe.category ), :style => "width:150px;" %>
        </div>
      </div>
      <div class="clearfix">
        <%= label_tag :tags, "tags" %>
        <div class="input">
        <%= text_field_tag :tags, @recipe.tags, :class => "xlarge" %>
        </div>
      </div>
      <div class="clearfix">
        <%= label_tag :cook_temp, "cook temp" %>
        <div class="input">
        <%= text_field_tag :cook_temp, @recipe.cook_temp, :class => "cook_temp" %>
        <%= select_tag :temp_unit, options_for_select(["","\u00B0 F","\u00B0 C","\u00B0 K"], @recipe.temp_unit) %>
        </div>
      </div>
      <div class="clearfix">
        <%= label_tag :cook_time, "cook time" %>
        <div class="input">
        <%= text_field_tag :cook_time, @recipe.cook_time, :class => "xlarge" %>
        </div>
      </div>
      <div class="clearfix">
        <%= label_tag :makes, "makes" %>
        <div class="input">
        <%= text_field_tag :makes, @recipe.makes, :class => "xlarge" %>
        </div>
      </div>
      <div class="clearfix">
        <%= label_tag :image, "image" %>
        <div class="input">
        <%= file_field_tag :image %>
        </div>
      </div>
        <p class="centered">create an ingredient based on this recipe for use in future recipes!</p>
      <div id="create_remove_ingredient">
        <%= create_remove_ingredient_button @recipe %>
      </div>
    </div>
    <div class="modal-footer"> 
      <div class="btn_left">
        <%= link_to "delete", recipe_path(@recipe), :confirm => "Are you sure?", :method => :delete, :id => "delete", :class => "btn danger" %>
      </div>
    	<%= f.submit "save", :class => "btn primary", :id => "submitRecipe" %>
      <a href="#" class="btn secondary" id="nevermind" >nevermind</a> 
    </div> 
  <% end %>
</div> 