
<style type="text/css">

	body {
		background: rgba(0,0,0,0.5);
	}
</style>
<%= stylesheet_link_tag 'impress' %>

<div id="impress">
	<div class="fallback-message">
        <p>Your browser <b>doesn't support the features required</b> by impress.js, so you are presented with a simplified version of this presentation.</p>
        <p>For the best experience please use the latest <b>Chrome</b> or <b>Safari</b> browser. Firefox 10 (to be released soon) will also handle it.</p>
    </div>

		<% @recipe.steps.ordered.each do |s| %>
			<div id="<%= s.number_to_word %>" class="step slide" data-x="0" data-y="<%= s.step_num*800 %>" data-rotate="<%= (90 * s.step_num) - 90 %>">
				<div class="pull-right"><h2 class="step_num"><%= s.number_string %></h2></div>
				<h1>what you need ... </h1>
				<hr />
				<div class="row">
				<% s.associations.ordered.each do |association| %>
					<div class="span1 column padright">
						<div class="association">
								<%= render association %>
						</div>
					</div>
					<% end %>
				</div>
				<br />
				<h1>here's what to do ... </h1>
				<hr />
				<%= s.note %>
			
			</div>
		<% end %>

</div>
<div class="hint">
    Use spacebar or arrow keys to navigate
</div>

<%= javascript_include_tag 'impress' %>